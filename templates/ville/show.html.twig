{% extends 'base.html.twig' %}

{% block title %}Ville{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Ville</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ ville.id }}</td>
                </tr>
                <tr>
                    <th>NomVille</th>
                    <td>{{ ville.nomVille }}</td>
                </tr>
                <tr>
                    <th>CodePostal</th>
                    <td>{{ ville.codePostal }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_ville_index') }}" class="btn btn-primary">Retour vers la liste</a>

        <a href="{{ path('app_ville_edit', {'id': ville.id}) }}" class="btn btn-primary">Modifier</a>

        {{ include('ville/_delete_form.html.twig') }}
    </div>
{% endblock %}
